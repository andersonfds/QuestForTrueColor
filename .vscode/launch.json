    "version": "0.2.0",
    "configurations": [
        {
            "name": "CPP Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "type summary add --expand --python-path '${workspaceFolder}/.vscode/lldb.pretty.py'",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
        }
    ]
}